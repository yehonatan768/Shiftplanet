<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanmed"
        android:text="@string/app_name"
        android:textSize="55sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/updated_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:background="@drawable/rounded_background"
                android:drawableStart="@drawable/email_icon"
                android:hint="Email"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/updated_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update"
                android:textColor="@color/white"
                android:backgroundTint="@color/accent_purple"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/updated_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:background="@drawable/rounded_background"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:drawableStart="@drawable/security_icon"
                android:hint="Password"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/updated_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update"
                android:textColor="@color/white"
                android:backgroundTint="@color/accent_purple"
                android:layout_marginStart="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/updated_full_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:drawableStart="@drawable/name_icon"
                android:hint="Full Name"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/updated_full_name_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update"
                android:textColor="@color/white"
                android:backgroundTint="@color/accent_purple"
                android:layout_marginStart="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/updated_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:drawableStart="@drawable/phone_icon"
                android:hint="Phone Number"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/updated_phone_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update"
                android:textColor="@color/white"
                android:backgroundTint="@color/accent_purple"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>