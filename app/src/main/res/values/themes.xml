<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ShiftPlanet" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/background_secondary</item>
        <item name="colorPrimaryVariant">@color/background_secondary</item>
        <item name="android:colorPrimaryDark">@color/background_secondary</item>

        <!-- Toolbar -->
        <item name="actionBarStyle">@style/ToolbarStyle</item>
        <item name="actionMenuTextColor">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Light icons on the status bar -->

        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <style name="Theme.ShiftPlanet" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/background_secondary</item>
        <item name="colorPrimaryVariant">@color/background_secondary</item>
        <item name="android:colorPrimaryDark">@color/background_secondary</item>

        <!-- Toolbar -->
        <item name="actionBarStyle">@style/ToolbarStyle</item>
        <item name="actionMenuTextColor">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Dark icons on the status bar -->

        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background_secondary</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:subtitleTextColor">@color/white</item>

    </style>

    <style name="CustomDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:popupBackground">@drawable/rounded_background</item> <!-- Set the desired background color -->
        <item name="android:textColor">@color/white</item> <!-- Set the text color -->

        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:background">@color/accent_purple</item>
        <item name="backgroundTint">@color/accent_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
</resources>